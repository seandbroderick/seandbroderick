#include <iostream>

using namespace std;


int fertilize(int stock, int amount);

int main(){
    
    int stock = 100, int = 50;

    if(stock > amount || amount <= 0){
        cout << "Please enter valid input" << endl;
        return 0;
    }
    int result = fertilize(stock, amount);
    cout << result << endl;
    return 0;
}

int fertilize(int stock, int amount){
    int result = stock - amount;
    return result;
}